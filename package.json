{
  "name": "bunproxy-gui",
  "version": "1.0.0",
  "description": "GUI for managing multiple BunProxy instances",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "build:compile": "bun build src/index.ts --compile --outfile bunproxy-gui",
    "build:compile:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile bunproxy-gui-linux",
    "build:compile:darwin": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile bunproxy-gui-darwin",
    "build:compile:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile bunproxy-gui-windows.exe",
    "build:all": "bun run build:compile:linux && bun run build:compile:darwin && bun run build:compile:windows",
    "start": "bun dist/index.js",
    "build:frontend": "cd frontend && bun run build",
    "dev:frontend": "cd frontend && bun run dev"
  },
  "keywords": [
    "bunproxy",
    "minecraft",
    "proxy",
    "gui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "yaml": "^2.3.4",
    "node-fetch": "^3.3.2",
    "chalk": "^5.3.0",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "@types/cookie-parser": "^1.4.6",
    "typescript": "^5.3.3"
  }
}
